<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat">

    </style>

    <!-- Style for loading progress -->
    <style name="LinearProgress">
        <item name="colorAccent">@color/md_white_1000</item>
    </style>

    <!-- Style for list item  -->
    <style name="list_item">
        <item name="android:textColor">@drawable/item_text_color</item>
        <item name="android:textSize">@dimen/component_text_size</item>
    </style>

    <style name="list_item_small">
        <item name="android:textColor">@drawable/item_text_color</item>
        <item name="android:textSize">@dimen/component_text_size_small</item>
    </style>

    <style name="list_item_big">
        <item name="android:textColor">@drawable/item_text_color</item>
        <item name="android:textSize">@dimen/component_text_size_big</item>
    </style>

    <style name="Toolbar.TitleText" parent="TextAppearance.Widget.AppCompat.Toolbar.Title">
        <item name="android:textSize">16sp</item>
    </style>

    <style name="info_text">
        <item name="android:textSize">18sp</item>
    </style>

    <style name="AppMaterialTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppMaterialTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

</resources>
