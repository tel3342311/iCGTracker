<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/setting_profile_item_height"
    android:layout_marginStart="@dimen/setting_item_margin_horizontal"
    android:layout_marginEnd="@dimen/setting_item_margin_horizontal">
    	
     <TextView
         android:id="@+id/title_text"
         android:layout_width="wrap_content"
         android:layout_height="wrap_content"
         android:layout_centerVertical="true"
         style="@style/list_item"/>
     
     <TextView
         android:id="@+id/value_text"
         android:layout_width="wrap_content"
         android:layout_height="wrap_content"
         android:layout_alignParentEnd="true"
         android:layout_centerVertical="true"
         style="@style/list_item"/>
     
     <View 
         android:layout_width="match_parent"
         android:layout_height="1dp"
         android:background="@color/md_grey_400"
         android:layout_alignParentBottom="true"
         android:layout_alignStart="@id/title_text"
         android:layout_alignEnd="@id/value_text"/>
</RelativeLayout>