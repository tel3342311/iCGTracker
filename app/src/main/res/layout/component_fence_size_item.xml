<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/bottom_option"
    android:layout_width="match_parent"
    android:layout_height="@dimen/fence_list_item_height">

    <ImageView
        android:id="@+id/record_icon"
        android:layout_width="@dimen/safty_item_icon_size"
        android:layout_height="@dimen/safty_item_icon_size"
        android:src="@drawable/btn_record_btn_time"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/record_item_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:maxHeight="@dimen/setting_child_name_max_width"
        android:singleLine="true"
        android:text="0.1"
        android:layout_marginStart="5dp"
        style="@style/list_item"
        android:textColor="@color/md_black_1000"
        app:layout_constraintTop_toBottomOf="@id/record_icon"
        app:layout_constraintStart_toStartOf="parent"
        android:gravity="center"/>

    <ImageView
        android:id="@+id/connect_line"
        android:layout_width="0dp"
        android:layout_height="10dp"
        android:src="@drawable/dotted_line"
        android:layerType="software"
        app:layout_constraintStart_toEndOf="@id/record_icon"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@id/record_icon"
        app:layout_constraintBottom_toBottomOf="@id/record_icon"/>

</android.support.constraint.ConstraintLayout>